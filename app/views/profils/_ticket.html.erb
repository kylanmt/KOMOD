<div class="card-index-clothes">
  <div data-controller="toggle">
    <div class="row">
      <div class="col img-col">
        <%= link_to cl_image_tag(clothe.photos.first.key), clothe_path(clothe), class: "ticket-photo"%>
      </div>
      <div class="col-8 reservation-col">
        <button data-action="click->toggle#fire" class="transaction-btn">Voir les reservations <%= "(#{clothe.transactions.size})" %></button>
      </div>
        <div data-toggle-target="togglableElement" class="d-none">
          <% clothe.transactions.each do |transaction| %>
          <div class="transaction-container">
            <%= link_to owner_transaction_path(transaction) do %>
              <p class="transaction-btn">du <%= transaction.start_date %> au <%= transaction.end_date%></p>
            <% end %>
            <%= link_to "refuser", transaction_path(transaction), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "delete-btn" %>
          </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
